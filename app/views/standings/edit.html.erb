<div class="container-fluid">
  <h1 class="text-center">Edit Standing for <%= @standing.team.team_name %></h1>

  <%= form_for(@standing) do |f| %>

    <p>
      <%= f.label :games %>
      <%= f.text_field :games %>
    </p>
    <p>
      <%= f.label :wins %>
      <%= f.text_field :wins %>
    </p>
    <p>
      <%= f.label :losses %>
      <%= f.text_field :losses %>
    </p>

    <p>
      <%= f.label :overtime_wins %>
      <%= f.text_field :overtime_wins %>
    </p>
    <p>
      <%= f.label :overtime_losses %>
      <%= f.text_field :overtime_losses %>
    </p>
    <p>
      <%= f.label :points %>
      <%= f.text_field :points %>
    </p>

    <p>
      <%= f.label :goals_for %>
      <%= f.text_field :goals_for %>
    </p>
    <p>
      <%= f.label :goals_against %>
      <%= f.text_field :goals_against %>
    </p>
    <p>
      <%= f.label :goal_difference %>
      <%= f.text_field :goal_difference %>
    </p>

    <%= f.submit %>
    <% end %>

  <%= link_to 'Back to Standings', standings_path %>

  <img src="<%= @standing.team.sm_logo %>" class="img-fluid" alt="<%= @standing.team.team_name %>">

</div>
