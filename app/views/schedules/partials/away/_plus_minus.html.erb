<div class="col-12">
  <div class="card-deck">
    <div class="card">
      <div class="card-header">
        <strong>Plus / Minus Leaders</strong>
      </div>
      <div class="card-block">
        <% @away.players.limit(3).where(pos_abr: %w[F D]).order(pim: :desc).each_with_index do |pim, i| %>
          <div class="table-responsive">
            <span class="float-left"><%= i += 1 %>. </span>
            <span class="float-left"> <%= pim.name %></span>
            <span class="float-right"><%= pim.pim %></span>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
