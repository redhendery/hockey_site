<div class="col-12">
  <div class="card-deck">
    <div class="card">
      <div class="card-header">
        <strong>Assists Leaders</strong>
      </div>
      <div class="card-block">
        <% @away.players.limit(3).where(posAbr: %w[F D]).order(assists: :desc).each_with_index do |assists, i| %>
          <div class="table-responsive">
            <strong>
              <span class="float-left"><%= i += 1 %>. </span>
              <span class="float-left"> <%= assists.name %></span>
              <span class="float-right"><%= assists.assists %></span>
            </strong>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
