<div class="col-11">
  <div class="card">
    <div class="card-header">
      <strong>Point Leaders</strong>
    </div>
    <div class="card-block">
      <% @away.players.limit(3).where(posAbr: %w[F D]).order(points: :desc).each_with_index do |points, i| %>
        <div class="table-responsive">
          <strong>
            <span class="float-left"><%= i += 1 %>. </span>
            <span class="float-left"> <%= points.name %></span>
            <span class="float-right"><%= points.points %></span>
          </strong>
        </div>
      <% end %>
    </div>
  </div>
</div>
