<div class="col-sm-12 col-md-12 col-lg-12 col-xl-12">
  <div class="card-deck">
    <div class="card">
      <div class="card-header">
        <strong>Goals Against Average</strong>
      </div>
      <div class="card-block">
        <% @away.players.limit(3).where.not(pos_abr: %w[F D], games_played: '0').order(:gaa).each_with_index do |gaa, i| %>
          <div class="table-responsive">
            <span class="float-left"><%= i += 1 %>. </span>
            <span class="float-left"><%= gaa.name %></span>
            <span class="float-right"><%= '%.2f' % gaa.gaa %></span>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
