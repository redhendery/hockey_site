<div class="col-12">
  <div class="card-deck">
    <div class="card">
      <div class="card-header">
        <strong>Save Percentage Leaders</strong>
      </div>
      <div class="card-block">
        <% @away.players.limit(3).where.not(posAbr: %w[F D], games_played: '0').each_with_index do |svs, i| %>
          <div class="table-responsive">
            <strong>
              <span class="float-left"><%= i += 1 %>. </span>
              <span class="float-left"><%= svs.name %></span>
              <span class="float-right">.<%= svs.svs %></span>
            </strong>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
