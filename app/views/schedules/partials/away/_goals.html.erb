<div class="col-12">
  <div class="card">
    <div class="card-header">
      <strong>Goal Leaders</strong>
    </div>
    <div class="card-block">
      <% @away.players.limit(3).where(posAbr: %w[F D]).order(goals: :desc).each_with_index do |goals, i| %>
        <div class="table-responsive">
          <strong>
            <span class="float-left"><%= i += 1 %>. </span>
            <span class="float-left"><%= goals.name %></span>
            <span class="float-right"><%= goals.goals %></span>
          </strong>
        </div>
      <% end %>
    </div>
  </div>
</div>
