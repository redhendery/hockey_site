<div class="container-fluid">
  <div class="row">
    <div class="col-sm-3 col-md-3 col-lg-3 col-xl-3 text-center">
      <%= render 'schedules/partials/home/home_team' %>
    </div>
    <div class="col-sm-6 col-md-6 col-lg-6 col-xl-6 text-center">
      <%= render 'schedules/partials/game_info' %>
      <div class="row">
        <div class="col-sm-6 col-md-6 col-lg-6 col-xl-6">
          <p class="text-muted float-left lineups">Home Lineup</p>
          <%= render 'schedules/partials/home/home_lineup' %>
        </div>
        <div class="col-sm-6 col-md-6 col-lg-6 col-xl-6">
          <p class="text-muted float-right lineups">Away Lineup</p>
          <%= render 'schedules/partials/away/away_lineup' %>
        </div>
      </div>
    </div>
    <div class="col-sm-3 col-md-3 col-lg-3 col-xl-3 text-center">
      <%= render 'schedules/partials/away/away_team' %>
    </div>
  </div>
</div>
