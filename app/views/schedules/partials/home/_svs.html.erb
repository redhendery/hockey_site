<div class="col-11">
  <div class="card">
    <div class="card-header">
      <strong>Save Percentage Leaders</strong>
    </div>
    <div class="card-block">
      <% @home.players.limit(3).where(posAbr: 'GK').each_with_index do |svs, i| %>
        <div class="table-responsive">
          <strong>
            <span class="float-left"><%= i += 1 %>. </span>
            <span class="float-left"><%= svs.name %></span>
            <span class="float-right">.<%= svs.svs %></span>
          </strong>
        </div>
      <% end %>
    </div>
  </div>
</div>
