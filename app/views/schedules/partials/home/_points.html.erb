<div class="col-sm-12 col-md-12 col-lg-12 col-xl-12">
  <div class="card-deck">
    <div class="card">
      <div class="card-header">
        <strong>Point Leaders</strong>
      </div>
      <div class="card-block">
        <% @home.players.limit(3).where(pos_abr: %w[F D]).order(points: :desc).each_with_index do |points, i| %>
          <div class="table-responsive">
            <span class="float-left"><%= i += 1 %>. </span>
            <span class="float-left"> <%= points.name %></span>
            <span class="float-right"><%= points.points %></span>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
