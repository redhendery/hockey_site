<div class="col-sm-12 col-md-12 col-lg-12 col-xl-12">
  <div class="card-deck">
    <div class="card">
      <div class="card-header">
        <strong><%= @home.abr %> Assist Leaders</strong>
      </div>
      <div class="card-block">
        <% @home.players.limit(3).where(pos_abr: %w[F D]).order(assists: :desc).each_with_index do |assists, i| %>
          <div class="table-responsive">
            <span class="float-left"><%= i += 1 %>. </span>
            <span class="float-left"> <%= assists.name %></span>
            <span class="float-right"><%= assists.assists %></span>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
