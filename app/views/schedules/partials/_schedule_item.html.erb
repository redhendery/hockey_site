<% @schedules.each do |schedule| %>
  <div class="container-fluid">
    <div class="col-md-6 col-lg-6 col-xl-6">
      <div class="card-deck">
        <div class="card text-center">
          <div class="card-header">
            <h5><%= schedule.leagueGame %> - <%= schedule.home %> v <%= schedule.away %></h5>
          </div>
          <div class="card-block">
            <span class="float-left"><img src="<%= schedule.homeLogo %>" alt="<%= schedule.home %>" class="img-fluid"></span>
            <span><%= link_to 'Game Details', schedule_path(schedule), class: "btn btn-primary" %></span>
            <span class="float-right"><img class="pull-right" src="<%= schedule.awayLogo %>" alt="<%= schedule.away %>" class="img-fluid"></span>
          </div>
          <div class="card-footer text-muted">
            <span class="float-left"><%= schedule.venue %></span>
            <span class="float-right"><%= schedule.prettyDate %></span>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
