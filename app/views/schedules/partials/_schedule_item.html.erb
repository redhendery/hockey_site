<div class="row">
  <% @schedules.each do |schedule| %>
    <div class="col-sm-6 col-md-6 col-lg-6 col-xl-6">
      <div class="card-deck">
        <div class="card text-center">
          <div class="card-header">
            <span>
              <strong>
                <%= schedule.league_game %> - <%= schedule.home_team.team_name %> v <%= schedule.away_team.team_name %>
              </strong>
            </span>
          </div>
          <div class="card-block">
            <div class="row">
              <div class="col-4"><img src="<%= schedule.home_team.sm_logo %>" alt="<%= schedule.home_team.sm_logo %>" class="img-fluid float-left"></div>
              <div class="col-4 align-self-center">
                <% if schedule.overtime %>
                  <h1 class="align-middle item-score">OT</h1>
                <% end %>
                <% if schedule.shootout %>
                  <h1 class="align-middle item-score">SO</h1>
                <% end %>
                <% if schedule.completed %>
                  <h1 class="align-middle item-score"><%= schedule.home_score %> - <%= schedule.away_score %></h1>
                <% else %>
                  <%= link_to 'Game Details', schedule_path(schedule), class: "btn btn-primary btn-responsive" %>
                <% end %>
              </div>
              <div class="col-4"><img src="<%= schedule.away_team.sm_logo %>" alt="<%= schedule.away_team.sm_logo %>" class="img-fluid float-right"></div>
            </div>
          </div>
          <div class="card-footer text-muted">
            <div class="row">
              <div class="col-6"><small><span class="float-left"><%= schedule.home_team.venue %></span></div>
              <div class="col-6"><span class="float-right"><%= schedule.prettyDate %></span></small></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
