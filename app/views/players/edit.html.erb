<div class="container-fluid">
  <div class="row">
    <div class="col-sm-2 col-md-2 col-lg-2 col-xl-2">
      <img src="<%= @player.team.sm_logo %>" class="img-fluid" alt="<%= @player.team.team_name %>">
    </div>
    <div class="col-sm-8 col-md-8 col-lg-8 col-xl-8">
      <h1 class="text-center">Edit Stats for <%= @player.name %></h1>
      <p class="text-center">Number <%= @player.number %>, <%= @player.position %> for <%= @player.team.team_name %></p>
      <p class="text-center"><%= link_to 'Back to Players', all_players_path %></p>
    </div>
    <div class="col-sm-2 col-md-2 col-lg-2 col-xl-2">
    </div>
  </div>
  <% if @player.pos_abr == 'GK' %>
    <%= render 'players/partials/edit/gk' %>
  <% else %>
    <%= render 'players/partials/edit/skater' %>
  <% end %>
</div>
