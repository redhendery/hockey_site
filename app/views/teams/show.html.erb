<div class="container-fluid">
  <div class="row">
    <div class="col-sm-4 col-md-4 col-lg-4 col-xl-4">
      <%= render 'teams/partials/previous' %>
    </div>
    <div class="col-sm-4 col-md-4 col-lg-4 col-xl-4">
      <img class="img-fluid mx-auto d-block show-logos" src="<%= @team.lg_logo %>" alt="<%= @team.team_name %>">
    </div>
    <div class="col-sm-4 col-md-4 col-lg-4 col-xl-4">
      <%= render 'teams/partials/record' %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6 col-md-6 col-lg-6 col-xl-6">
      <%= render 'teams/partials/offensive_team_stats' %>
    </div>
    <div class="col-sm-6 col-md-6 col-lg-6 col-xl-6">
      <%= render 'teams/partials/defensive_team_stats' %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-3 col-md-3 col-lg-3 col-xl-3">
      <%= render 'teams/partials/points' %>
    </div>
    <div class="col-sm-3 col-md-3 col-lg-3 col-xl-3">
      <%= render 'teams/partials/goals' %>
    </div>
    <div class="col-sm-3 col-md-3 col-lg-3 col-xl-3">
      <%= render 'teams/partials/assists' %>
    </div>
    <div class="col-sm-3 col-md-3 col-lg-3 col-xl-3">
      <%= render 'teams/partials/svs' %>
    </div>
  </div>
</div>
