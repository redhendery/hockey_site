<div class="card-deck">
  <div class="card">
    <div class="card-header text-center">
      <strong>Team Defensive Stats</strong>
    </div>
    <div class="card-block">
      <div class="row">
        <table class="table-sm w-100">
          <thead class="table">
            <tr>
              <th class="text-center">GA</th>
              <th class="text-center">SOGA</th>
              <th class="text-center">GAA</th>
              <th class="text-center">SHGA</th>
              <th class="text-center">PIM</th>
              <th class="text-center">PK</th>
              <th class="text-center">PPGA</th>
              <th class="text-center">PK%</th>
            </tr>
          </thead>
          <tbody>
            <tr class="align-middle text-center">
            <td><%= standing.goals_against %></td>
            <td><%= stat.sog_allowed %></td>
            <td><%= '%.2f' % gaa %></td>
            <td><%= stat.shg_allowed %></td>
            <td><%= stat.pim %></td>
            <td><%= stat.pk %></td>
            <td><%= stat.ppg_allowed %></td>
            <td><%= '%.2f' % pk_percent %>%</td>
        </table>
      </div>
    </div>
  </div>
</div>
