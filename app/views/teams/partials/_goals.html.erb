<div class="card">
  <div class="card-header">
    <strong>Team Goal Leaders</strong>
  </div>
  <div class="card-block">
    <% @goals.each_with_index do |goals, i| %>
      <div class="table-responsive">
        <span><strong><%= i += 1 %>. </strong></span>
        <span><strong><%= goals.name %></strong></span>
        <span class="float-right"><strong><%= goals.goals %></strong></span>
      </div>
    <% end %>
  </div>
</div>
