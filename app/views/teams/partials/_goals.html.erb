<div class="card-deck">
  <div class="card">
    <div class="card-header">
      <strong>Team Goal Leaders</strong>
    </div>
    <div class="card-block">
      <% @skate.limit(5).order(goals: :desc).each_with_index do |skate, i| %>
        <div class="table-responsive">
          <span><strong><%= i += 1 %>. </strong></span>
          <span><strong><%= skate.name %></strong></span>
          <span class="float-right"><strong><%= skate.goals %></strong></span>
        </div>
      <% end %>
    </div>
  </div>
</div>
