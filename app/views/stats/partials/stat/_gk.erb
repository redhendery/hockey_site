<table id="gk" class="table table-striped" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th class="text-center">#</th>
      <th>Player</th>
      <th class="text-center">Team</th>
      <th class="text-center">Pos</th>
      <th class="text-center">Catches</th>
      <th class="text-center">GP</th>
      <th class="text-center">SOG</th>
      <th class="text-center">SVS</th>
      <th class="text-center">GA</th>
      <th class="text-center">SV%</th>
      <th class="text-center">GAA</th>
      <th class="text-center">SO</th>
    </tr>
  </thead>
  <tbody class="text-center">
    <% @gk.each_with_index do |gk, i| %>
      <tr>
        <td><%= i += 1 %>. </td>
        <td class="float-left"><%= gk.name %></td>
        <td><%= gk.team.abr %></td>
        <td><%= gk.pos_abr %></td>
        <td><%= gk.catches %></td>
        <td><%= gk.games_played %></td>
        <td><%= gk.sog %></td>
        <td><%= gk.saves %></td>
        <td><%= gk.goals_against %></td>
        <td>.<%= gk.svs %></td>
        <td><%= '%.2f' % gk.gaa %></td>
        <td><%= gk.shutouts %></td>
      </tr>
    <% end %>
  </tbody>
</table>
