<div class="card-deck">
  <div class="card">
    <div class="card-header text-center">
      <strong>Point Leaders</strong>
    </div>
    <div class="card-block">
      <% @skate.limit(5).order(points: :desc).each_with_index do |skate, i| %>
        <div class="table-responsive">
          <span><%= i += 1 %>. </span>
          <span><%= skate.name %></span>
          <span><small class="stats"><%= skate.team.abr %></small></span>
          <span class="float-right"><%= skate.points %></span>
        </div>
      <% end %>
    </div>
  </div>
</div>
